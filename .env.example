# Node environment (development, production, test)
NODE_ENV=development

# Server port
PORT=3000

# Database connection string
DATABASE_URL=postgresql://user:password@localhost:5432/proxystaff

# Encryption key for credentials (32+ characters)
CREDENTIALS_ENCRYPTION_KEY=your-32-char-encryption-key-here

# Tavily Search API (optional - for web search tool)
TAVILY_API_KEY=your-tavily-api-key-here

# WhatsApp API Configuration
WHATSAPP_VERIFY_TOKEN=your-verify-token-here
WHATSAPP_APP_SECRET=your-meta-app-secret-here
WHATSAPP_ACCESS_TOKEN=your-meta-access-token-here
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id-here

# Telegram Bot Configuration (optional - alternative to WhatsApp)
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Admin Telegram chat ID for critical alerts (optional but recommended)
ADMIN_TELEGRAM_CHAT_ID=your-telegram-chat-id-here

# Admin API key (required - protects admin routes)
ADMIN_API_KEY=your-admin-api-key-here

# Claude model (optional - defaults to claude-opus-4-5)
CLAUDE_MODEL=claude-opus-4-5

# Logging (optional - defaults to 'info')
LOG_LEVEL=info

# Session Management
# Conversation session timeout in hours (default: 24)
SESSION_TIMEOUT_HOURS=24

# Browser Automation (optional - for browser tools)
# Maximum browser sessions per tenant (default: 5)
BROWSER_MAX_SESSIONS_PER_TENANT=5
# Idle session timeout in milliseconds (default: 30 min = 1800000)
BROWSER_SESSION_IDLE_TTL_MS=1800000
# Persistent session timeout in milliseconds (default: 24 hours = 86400000)
BROWSER_SESSION_PERSIST_TTL_MS=86400000

# Async Task Queue (Redis + BullMQ)
# Redis connection URL (default: localhost)
REDIS_URL=redis://localhost:6379
# Enable queue worker in this process (default: true)
WORKER_ENABLED=true
# Number of concurrent jobs to process (default: 2)
BULLMQ_CONCURRENCY=2
# Threshold for async processing in ms (default: 3 min = 180000)
ASYNC_TASK_THRESHOLD_MS=180000
# Progress update interval in ms (default: 1 min = 60000)
PROGRESS_UPDATE_INTERVAL_MS=60000
# Maximum job runtime in ms (default: 20 min = 1200000)
ASYNC_JOB_MAX_RUNTIME_MS=1200000
# Maximum queued jobs per tenant (default: 5)
MAX_QUEUED_JOBS_PER_TENANT=5

# ===== TENANT-SPECIFIC CREDENTIALS =====
# These go in tenants/{tenant_id}/.env, not here

# Coinbase Configuration (for crypto refill tools)
# Get credentials from: https://portal.cdp.coinbase.com/access/api
# COINBASE_API_KEY=your_coinbase_api_key
# COINBASE_API_SECRET=your_coinbase_api_secret
# CRYPTO_MAX_SINGLE_TRANSFER=200
# CRYPTO_DAILY_LIMIT=1000
